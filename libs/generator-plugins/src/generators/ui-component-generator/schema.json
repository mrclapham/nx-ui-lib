{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "UiComponentGenerator",
  "title": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Component name",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use for the component?"
    },
    "componentType": {
      "type": "string",
      "description": "Component type",
      "enum": ["atoms", "molecules", "organisms"],
      "x-prompt": {
        "message": "What type of component is this?",
        "type": "list",
        "items": [
          { "value": "atoms", "label": "Atom" },
          { "value": "molecules", "label": "Molecule" },
          { "value": "organisms", "label": "Organism" }
        ]
      }
    }
  },
  "required": ["name", "componentType"]
}
